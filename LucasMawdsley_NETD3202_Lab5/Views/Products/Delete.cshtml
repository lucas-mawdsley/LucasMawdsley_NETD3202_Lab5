@model LucasMawdsley_NETD3202_Lab5.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <!--Displays all product values with labels to review before deletion-->
    <dl class="row ml-3">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalPrice())
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice())
        </dd>
    </dl>
    
    <!--Simple form to delete product-->
    <form asp-action="Delete">
        <!--Hidden input to hold product ID for validation-->
        <input type="hidden" asp-for="ProductId" />
        <!--Delete button-->
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <!--Return to list, no changes-->
        <a class="btn btn-dark" asp-action="Index">Back to List</a>
    </form>
</div>
